{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": false,
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "src/types"
        ],
        "types": [
            "node",
            "mocha"
        ]
    },
    "exclude": [
        "coverage",
        "node_modules",
        "dist",
        "config/*.js",
        "test"
    ]
}
